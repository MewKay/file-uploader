<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("partials/head.ejs", { title: currentFolder.name }) %>
    <link rel="stylesheet" href="/styles/header.css" />
    <link rel="stylesheet" href="/styles/main-index.css" />
  </head>
  <body>
    <%- include("partials/header.ejs") %>
    <main>
      <div class="heading">
        <h3><%= currentFolder.name %></h3>

        <div class="button-container">
          <button class="new-folder-button">Create a new folder</button>
          <button class="open-upload-modal-button">Upload a file</button>
        </div>

        <dialog class="file-upload-modal">
          <form
            action="./upload-file/"
            method="post"
            enctype="multipart/form-data"
          >
            <button
              class="close-modal-button"
              type="button"
              kkaria-label="Close write folder name modal"
            >
              x
            </button>
            <input type="file" name="uploaded_file" />
            <button type="submit">Upload</button>
          </form>
        </dialog>
        <%- include("partials/folder-name-modal.ejs", { 
              formAction: "./new-folder/", 
              buttonName: "Create", 
              className: "new-folder-modal" 
            }) %>
      </div>
      <div class="files-container">
        <div class="files-content">
          <p class="files-header">Name</p>
          <p class="files-header">Size</p>
          <p class="files-header">Date</p>
          <div class="files-header">Action</div>

          <% if (!currentFolder.is_root) { %>
          <a href="../" class="item-name files-row">Parent directory</a>
          <div class="files-row item-size"></div>
          <div class="files-row"></div>
          <div class="files-row"></div>
          <% } %>

          <% const splitFormattedDate = (formattedDate) => { const array =
          formattedDate.split(" - "); return { date: array[0], time: array[1] }
          } %> <% currentFolderList.forEach((folder) => { %>
          <a href="./<%= folder.name %>/" class="files-row item-name"
            ><%= folder.name %></a
          >

          <p class="files-row item-size">-</p>
          <p class="files-row item-date">
            <% const folderDate = splitFormattedDate(folder.formattedDate) %>
            <span class="date"><%= folderDate.date %></span>
            <span class="separator">-</span>
            <span class="time"><%= folderDate.time %></span>
          </p>

          <div class="files-row folder-action">
            <button class="toggle-action-button">...</button>
            <span class="folder-button-container hidden">
              <button class="rename-button">Rename folder</button>

              <% const formAction = `./${encodeURIComponent(folder.name)}/rename-folder/` %>
              <%- include("partials/folder-name-modal.ejs", { formAction,  buttonName: "Rename", className: "rename-modal"}) %>

              <form action="./<%= folder.name %>/delete-folder/" method="post">
                <button
                  type="submit"
                  onclick="return confirm('Do you really want to delete folder <%= folder.name %> and all of its content ? This action is irreversible.');"
                >
                  Delete folder
                </button>
              </form>
            </span>
          </div>
          <% }) %>

          <% currentFilesList.forEach((file) => { %>
          <a href="./<%= file.name %>" class="files-row item-name"
            ><%= file.name %></a
          >
          <p class="files-row item-size"><%= file.formattedSize %></p>
          <p class="files-row item-date">
            <% const fileDate = splitFormattedDate(file.formattedDate) %>
            <span class="date"><%= fileDate.date %></span>
            <span class="separator">-</span>
            <span class="time"><%= fileDate.time %></span>
          </p>
          <div class="files-row folder-action"></div>
          <% }) %>
        </div>
      </div>
    </main>
    <script src="/scripts/folderOptions.js"></script>
    <script src="/scripts/folderActionToggle.js"></script>
  </body>
</html>
