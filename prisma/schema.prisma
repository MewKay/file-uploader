generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model File {
  id          Int      @id @default(autoincrement())
  name        String
  size        Int      @default(0)
  mime_type   String
  upload_time DateTime @default(now())
  owner_id    Int
  owner       User     @relation(fields: [owner_id], references: [id])
  parent_id   Int
  parent      Folder   @relation(fields: [parent_id], references: [id])

  @@unique([name, parent_id])
  @@map("files")
}

model Folder {
  id         Int      @id @default(autoincrement())
  name       String
  path       String
  is_root    Boolean  @default(false)
  updated_at DateTime @default(now())
  owner_id   Int
  owner      User     @relation(fields: [owner_id], references: [id])
  parent_id  Int?
  parent     Folder?  @relation("FolderHierarchy", fields: [parent_id], references: [id])
  children   Folder[] @relation("FolderHierarchy")
  files      File[]

  @@unique([name, parent_id])
  @@map("folders")
}

model User {
  id       Int      @id @default(autoincrement())
  username String   @unique
  password String
  File     File[]
  Folder   Folder[]

  @@map("users")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime

  @@map("sessions")
}
